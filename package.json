{
  "name": "autodiff",
  "displayName": "autodiff",
  "description": "AI-powered code review tool for Git diffs, with support for security, accessibility, and best-practice checks â€” directly in VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autodiff.runComprehensiveReview",
        "title": "Run Reviews",
        "icon": "$(play)",
        "enablement": "true"
      },
      {
        "command": "autodiff.runCustomReview",
        "title": "AutoDiff: Run Custom Review"
      },
      {
        "command": "autodiff.changeBaseBranch",
        "title": "Select Base Branch",
        "icon": "$(git-branch)"
      },
      {
        "command": "autodiff.toggleBranchComparison",
        "title": "Toggle Branch Comparison"
      },
      {
        "command": "autodiff.toggleDebugOutput",
        "title": "Toggle Debug Output"
      },
      {
        "command": "autodiff.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "autodiff.toggleSecurityReview",
        "title": "Toggle Security Review"
      },
      {
        "command": "autodiff.toggleAccessibilityReview",
        "title": "Toggle Accessibility Review"
      },
      {
        "command": "autodiff.togglePerformanceReview",
        "title": "Toggle Performance Review"
      },
      {
        "command": "autodiff.toggleQualityReview",
        "title": "Toggle Quality Review"
      }
    ],
    "views": {
      "autodiff-container": [
        {
          "id": "autodiffBranchView",
          "name": "Branch",
          "when": "true",
          "icon": "$(git-branch)"
        },
        {
          "id": "autodiffReviewView",
          "name": "Reviews",
          "when": "true",
          "icon": "$(shield)"
        },
        {
          "id": "autodiffChangesView",
          "name": "Changes",
          "when": "true",
          "icon": "$(git-branch)"
        },
        {
          "id": "autodiffResultsView",
          "name": "Results",
          "when": "true",
          "icon": "$(checklist)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autodiff-container",
          "title": "AutoDiff",
          "icon": "$(shield)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "autodiff.runComprehensiveReview",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "autodiff.runComprehensiveReview",
          "when": "view == autodiffReviewView",
          "group": "navigation@0"
        },
        {
          "command": "autodiff.refreshView",
          "when": "view == autodiffChangesView",
          "group": "navigation@1"
        }
      ],
      "viewsContainer/title": [
        {
          "command": "autodiff.runComprehensiveReview",
          "when": "viewContainer == autodiff-container",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "AutoDiff",
      "properties": {
        "autodiff.llmProvider": {
          "type": "string",
          "enum": [
            "chatgpt",
            "gemini",
            "claude"
          ],
          "enumDescriptions": [
            "ChatGPT (requires OpenAI API key)",
            "Google Gemini (requires Gemini API key)",
            "Anthropic Claude (requires Anthropic API key)"
          ],
          "default": "chatgpt",
          "description": "LLM provider to use for code analysis"
        },
        "autodiff.enableLLMAnalysis": {
          "type": "boolean",
          "default": false,
          "description": "Enable actual LLM analysis (requires API keys). When disabled, shows analysis prompt only."
        },
        "autodiff.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key (only needed if using ChatGPT provider)"
        },
        "autodiff.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key (only needed if using Gemini provider)"
        },
        "autodiff.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic Claude API Key (only needed if using Claude provider)"
        },
        "autodiff.baseBranch": {
          "type": "string",
          "default": "origin/main",
          "description": "Base branch to compare git diff against (e.g., origin/main, main, develop)"
        },
        "autodiff.enableBranchComparison": {
          "type": "boolean",
          "default": true,
          "description": "Enable comparing changes against the base branch. When disabled, only analyzes staged and unstaged changes."
        },
        "autodiff.enableDebugOutput": {
          "type": "boolean",
          "default": false,
          "description": "Show detailed console output during analysis for debugging purposes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}